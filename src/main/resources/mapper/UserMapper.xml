<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.galleryboard.mapper.UserMapper">
	
	<sql id="UserColumns">
		id,
		password,
		name,
		register_date,
		isAccountNonExpired,
		isAccountNonLocked,
		isCredentialsNonExpired,
		isEnabled
	</sql>
	
	<insert id="insertUser" parameterType="User">
		INSERT INTO 	tb_user(
						<include refid="UserColumns" />
						)VALUES(
						#{username},
						#{password},
						#{name},
						NOW(),
						#{isAccountNonExpired},
						#{isAccountNonLocked},
						#{isCredentialsNonExpired},
						#{isEnabled}
						)
	</insert>
	
	<select id="selectUser" parameterType="String" resultType="User">
		SELECT 	<include refid="UserColumns" />
		FROM 	tb_user
		WHERE 	1=1 
		AND 	id = #{id}
	</select>
	
	<select id="selectAuthorities" parameterType="String" resultType="org.springframework.security.core.authority.SimpleGrantedAuthority">
		SELECT 	auth
		FROM 	tb_auth
		WHERE 	1=1
		AND 	id = #{id}
	</select>
	
	<insert id="createAuthority" parameterType="org.springframework.security.core.authority.SimpleGrantedAuthority">
		INSERT INTO	tb_auth (
					id,
					auth
					)VALUES
					<foreach item="authority" index="index" collection="authorities" separator=",">
					 (#{id}, #{authority.role})
					</foreach>
					ON DUPLICATE KEY
					UPDATE
					id = #{id}	
	</insert>
	

</mapper>